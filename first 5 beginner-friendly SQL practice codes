/* 1. View all data from the students table */
SELECT * FROM students;

/* 2. Insert a new student into the table */
INSERT INTO students (id, name, age, grade) 
VALUES (1, 'Alex', 20, 'A');

/* 3. Update Alex's grade to B */
UPDATE students
SET grade = 'B'
WHERE name = 'Alex';

/* 4. Delete student Alex from the table */
DELETE FROM students
WHERE name = 'Alex';

/* 5. Show students older than 18 */
SELECT * FROM students
WHERE age > 18;

/* 6. Show students ordered by age (youngest to oldest) */
SELECT * FROM students
ORDER BY age ASC;

/* 7. Count total number of students in the table */
SELECT COUNT(*) AS total_students
FROM students;

/* 8. Find the average age of students */
SELECT AVG(age) AS average_age
FROM students;

/* 9. Group students by grade and count them */
SELECT grade, COUNT(*) AS total_students
FROM students
GROUP BY grade;

/* 10. Find the maximum age of students */
SELECT MAX(age) AS oldest_student
FROM students;

